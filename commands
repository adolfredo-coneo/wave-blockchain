mkdir wave-portal
cd wave-portal
yarn init -y

//hardhat
yarn add -D hardhat
npx hardhat

npx hardhat run scripts/run.js

npx hardhat node

//git
git init
git add .
git commit -m "first commit"
git branch -M main
git remote add origin https://github.com/adolfredo-coneo/wave-portal.git
git push -u origin main